        <Label x:Name="RecipeTypeLabel" Content="Recipe Type:" HorizontalAlignment="Left" Margin="277,631,0,0" VerticalAlignment="Top" Height="26" Width="74"/>
        <TextBox x:Name="RecipeTypeTextBox" HorizontalAlignment="Left" Height="23" Margin="393,634,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92" IsEnabled="False" IsReadOnly="True"/>

    </Grid>
